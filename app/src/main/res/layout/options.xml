<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setting">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="0dp"
        android:paddingBottom="10dp"
        android:paddingTop="100dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDifficult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:shadowColor="#FFFFFFFF"
                android:text="@string/gameDifficult"
                android:textColor="@color/font_lite"
                android:textSize="@dimen/fontSize" />

            <SeekBar
                android:id="@+id/sbrDifficult"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:max="50"
                android:progress="1" />

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:shadowColor="#FFFFFFFF"
                android:text="@string/moveSpeed"
                android:textColor="@color/font_lite"
                android:textSize="@dimen/fontSize" />

            <SeekBar
                android:id="@+id/sbrSpeed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:max="300"
                android:paddingBottom="1dp"
                android:progress="1" />

            <TextView
                android:id="@+id/tvGrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:shadowColor="#FFFFFFFF"
                android:text="@string/growSpeed"
                android:textColor="@color/font_lite"
                android:textSize="@dimen/fontSize" />

            <SeekBar
                android:id="@+id/sbrGrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding"
                android:max="1000"
                android:progress="1" />

            <android.support.v7.widget.ButtonBarLayout
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin">

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/button_style"
                    android:onClick="btnYes"
                    android:text="@string/settingSave"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/button_style"
                    android:onClick="btnNo"
                    android:text="@string/settingCancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize" />
            </android.support.v7.widget.ButtonBarLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>